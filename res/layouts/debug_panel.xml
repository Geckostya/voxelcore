<panel color="#00000080" size="300,0" gravity="top-left" padding="8,8,8,8" interactive="true" z-index="2">
    <!-- Performance -->
    <label id="dbg_fps" color="#FFFFFFFF" font="mono"           text="FPS: --/--"/>
    <label id="dbg_meshes" color="#FFFFFFFF" font="mono"        text="meshes: N/A"/>
    <label id="dbg_draw_calls" color="#FFFFFFFF" font="mono"    text="draw-calls: N/A"/>
    <label id="dbg_particles" color="#FFFFFFFF" font="mono"     text="particles: N/A emitters: N/A"/>
    <label id="dbg_frustum" color="#FFFFFFFF" font="mono"       text="frustum-culling: -"/>
    <label id="dbg_audio" color="#FFFFFFFF" font="mono"         text="audio: speakers: - streams: -"/>
    <label id="dbg_lua_stack" color="#FFFFFFFF" font="mono"     text="lua-stack: N/A"/>
    <label id="dbg_net" color="#FFFFFFFF" font="mono"           text="net: download: - B/s upload: - B/s"/>

    <!-- World stats -->
    <label id="dbg_chunks" color="#FFFFFFFF" font="mono"    text="chunks: - visible: N/A"/>
    <label id="dbg_entities" color="#FFFFFFFF" font="mono"  text="entities: - next: N/A"/>
    <label id="dbg_players" color="#FFFFFFFF" font="mono"   text="players: - local: -"/>

    <!-- Selection and player -->
    <label id="dbg_block_state" color="#FFFFFFFF" font="mono"   text="block: -"/>
    <label id="dbg_selection_pos" color="#FFFFFFFF" font="mono" text="x: - y: - z: -"/>
    <label id="dbg_block_name" color="#FFFFFFFF" font="mono"    text="name: -"/>
    <label id="dbg_target_entity" color="#FFFFFFFF" font="mono" text="entity: -"/>
    <label id="dbg_flags" color="#FFFFFFFF" font="mono"         text="flags: -"/>

    <!-- World info and controls -->
    <label id="dbg_seed" color="#FFFFFFFF" font="mono"          text="seed: -"/>

    <!-- Teleport inputs (enter coords to teleport) -->
    <panel color="#00000020" size="380,27" padding="2,2,2,2">
        <label color="#FFFFFFFF" font="mono" size="20,27">X:</label>
        <textbox id="dbg_tp_x" size="110,27" placeholder="-"
                 supplier="function() local pid=hud.get_player(); local x=select(1, player.get_pos(pid)); if x==nil then return '' end; return string.format('%.2f', x) end"
                 consumer="function(s) local pid=hud.get_player(); local x=tonumber(s); if x==nil then return end; local _,y,z = player.get_pos(pid); player.set_pos(pid, x, y, z) end"/>
        <label color="#FFFFFFFF" font="mono" size="20,27">Y:</label>
        <textbox id="dbg_tp_y" size="110,27" placeholder="-"
                 supplier="function() local pid=hud.get_player(); local y=select(2, player.get_pos(pid)); if y==nil then return '' end; return string.format('%.2f', y) end"
                 consumer="function(s) local pid=hud.get_player(); local y=tonumber(s); if y==nil then return end; local x,_,z = player.get_pos(pid); player.set_pos(pid, x, y, z) end"/>
        <label color="#FFFFFFFF" font="mono" size="20,27">Z:</label>
        <textbox id="dbg_tp_z" size="110,27" placeholder="-"
                 supplier="function() local pid=hud.get_player(); local z=select(3, player.get_pos(pid)); if z==nil then return '' end; return string.format('%.2f', z) end"
                 consumer="function(s) local pid=hud.get_player(); local z=tonumber(s); if z==nil then return end; local x,y,_ = player.get_pos(pid); player.set_pos(pid, x, y, z) end"/>
    </panel>
    
    <!-- Time -->
    <label id="dbg_time_label" color="#FFFFFFFF" font="mono"    text="time: --:--"/>
    <trackbar id="dbg_time_trk"
              min="0" max="1" step="0.005" value="0"
              supplier="function() return world.get_day_time() end"
              consumer="function(x) world.set_day_time(x) end"/>

    <!-- Fog control -->
    <trackbar id="dbg_fog_trk"
              min="0" max="1" step="0.005" value="0"
              supplier="function() return world.get_fog() end"
              consumer="function(x) world.set_fog(x) end"/>

    <!-- Debug toggles -->
    <checkbox id="dbg_cb_chunk_borders" size="400,24"
              supplier="render.get_show_chunk_borders"
              consumer="render.set_show_chunk_borders">Show Chunk Borders</checkbox>
    <checkbox id="dbg_cb_hitboxes" size="400,24"
              supplier="render.get_show_hitboxes"
              consumer="render.set_show_hitboxes">Show Hitboxes</checkbox>
    <checkbox id="dbg_cb_paths" size="400,24"
              supplier="render.get_show_paths"
              consumer="render.set_show_paths">Show Paths</checkbox>
    <checkbox id="dbg_cb_minimap" size="400,24"
              supplier="render.get_show_generator_minimap"
              consumer="render.set_show_generator_minimap">Show Generator Minimap</checkbox>
</panel>
